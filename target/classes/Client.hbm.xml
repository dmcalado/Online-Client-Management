<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "pt.multicert.clientmanagement.data.Client" table = "Clients">

        <meta attribute = "class-description">
            This class contains the client detail.
        </meta>

        <id name = "nif" type = "int" column = "nif">

        </id>
        <property name = "name" column = "nome" type = "string"/>
        <property name = "morada" column = "morada" type = "string"/>
        <property name = "telefone" column = "telefone" type = "int"/>

    </class>
</hibernate-mapping>